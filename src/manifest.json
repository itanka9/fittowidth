{
  "name": "Fit to width",
  "version": "0.9.5",
  "manifest_version": 2,
  "description": "Trys to remove horisontal scrollbar by fitting web-page into browser window.",
  "background": {
    "scripts": ["button.js"],
    "persistent": false
  },
  "icons" : { 
     "16": "fav16.png",
     "48": "fav48.png",
     "128": "fav128.png" 
  },
  "permissions": [
     "tabs"
  ],
  "content_scripts": [
    {
       "matches": ["http://*/*", "https://*/*", "file://*/*"],
       "js": ["shortcut.js", "fittowidth.js"]
    }
  ],
  "browser_action": {
     "default_icon": "default.png", 
     "default_title": "Fit to width"
  }
}